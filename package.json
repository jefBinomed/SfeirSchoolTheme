{
  "name": "sfeirschooltheme",
  "version": "1.0.0",
  "description": "Sfeir School Theme for RevealJS",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass src/scss/sfeir-school-theme.scss -o dist/css/ --source-map=true --watch=\"src/scss\" --recursive=\"src/scss\"",
    "sass-once": "node-sass src/scss/sfeir-school-theme.scss -o dist/css/ --source-map=true",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy": "parallelshell \"npm run copy-js\" \"npm run copy-images\" \"npm run copy-fonts\" ",
    "copy-js": "copy src/js/**/*.js dist/js",
    "copy-fonts": "copy src/fonts/* dist/fonts",
    "copy-images": "copy src/images/* dist/images",
    "watch-js": "chokidar \"src/js/*.js\" -c \"npm run copy\"",
    "format": "prettier --write {demo,src}/**/*.{html,md,js,scss}",
    "serve": "live-server --port=4242 --entry-file=\"./demo/index.html\" --mount=\"/assets:./demo/assets\" --watch=\"dist/,demo/md/\"",
    "start": "parallelshell \"npm run serve\" \"npm run sass\" \"npm run copy\" \"npm run watch-js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefBinomed/SfeirSchoolTheme.git"
  },
  "keywords": [
    "css",
    "sfeir"
  ],
  "author": "jefbinomed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jefBinomed/SfeirSchoolTheme/issues"
  },
  "homepage": "https://github.com/jefBinomed/SfeirSchoolTheme#readme",
  "dependencies": {
    "chokidar-cli": "^1.2.1",
    "copy": "^0.3.2",
    "highlight.js": "^9.13.1",
    "live-server": "^1.2.1",
    "node-sass": "^4.11.0",
    "parallelshell": "3.0.1",
    "prettier": "^1.15.3",
    "reveal.js": "^3.7.0"
  }
}
